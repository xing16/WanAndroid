<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/layout_register_back"
            layout="@layout/layout_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/user_register"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/et_register_username"
            style="@style/RegisterEditTextStyle"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:hint="@string/please_input_username"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/et_forget_pwd_verify_code" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_ea" />

        <EditText
            android:id="@+id/et_register_password"
            style="@style/RegisterEditTextStyle"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:hint="@string/please_input_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_ea" />

        <EditText
            android:id="@+id/et_register_repassword"
            style="@style/RegisterEditTextStyle"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:hint="@string/please_input_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_register"
            style="@style/PrimaryButtonStyle"
            android:text="@string/register" />

    </LinearLayout>


</LinearLayout>